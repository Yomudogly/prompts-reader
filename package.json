{
    "name": "prompts-reader",
    "displayName": "PromptsReader",
    "version": "1.0.0",
    "description": "A Chrome extension for quick access to your personal prompt library from GitHub",
    "author": "Roman Khalnepes",
    "scripts": {
        "dev": "plasmo dev",
        "build": "plasmo build",
        "build:zip": "plasmo build --zip",
        "package": "plasmo package",
        "clean": "rm -rf .plasmo"
    },
    "dependencies": {
        "plasmo": "^0.90.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "lucide-react": "^0.542.0",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-label": "^2.1.7",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.3.1",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@types/chrome": "^0.1.4",
        "@types/node": "^24.3.0",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "typescript": "^5.9.2",
        "tailwindcss": "^3.4.1",
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.6"
    },
    "manifest": {
        "host_permissions": [
            "https://api.github.com/*",
            "https://github.com/*"
        ],
        "permissions": [
            "storage",
            "tabs",
            "commands"
        ]
    },
    "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
